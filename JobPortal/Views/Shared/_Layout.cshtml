@*@model IEnumerable<YourProject.Models.Job>*@
@{
    var roleId = ViewContext.HttpContext.Session.GetInt32("IRoleId");
    var userId = ViewContext.HttpContext.Session.GetInt32("IUserId");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Listings</title>

    <!-- Include Google Fonts and Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link href="~/css/Layout_.css" rel="stylesheet" />
    
</head>
<body>

    <!-- Header -->
    <header class="header">
        <div class="header-item">
            <div class="header-logo "><a href="#">Job Portal</a></div>

            <nav class="header-nav">
                <a href="#">Home</a>
                <a href="#">Jobs</a>
                <a href="#">About</a>
                <a href="#">Contact</a>
            </nav>
        </div>

@*        <!-- Search Bar -->
        <div class="header-search">
            <input type="text" placeholder="Search jobs, companies...">
            <button><i class="bi bi-search"></i></button>
        </div>*@
        @if (userId == null)
        {
            <!-- Sign In / Sign Up Links -->
            <div class="auth-links">
                <a href="#" class="sign-link">Sign In</a>
                <span class="divider">/</span>
                <a href="#" class="sign-link">Sign Up</a>
            </div>
        }
        else
        {
            <!-- Dropdown Avatar Menu -->
            <div class="header-avatar">
                <img src="https://via.placeholder.com/40" alt="User Avatar" class="avatar-img">
                <span class="header-avatar-name">John Doe</span>

                <!-- Dropdown Menu -->
                <ul class="dropdown-menu">
                    <li><a asp-action="Profile" asp-controller="User">Profile</a></li>
                    <li><a href="#">Settings</a></li>
                    <hr>
                    <li>
                        <form method="post" action="/User/Logout">
                            <button type="submit" class="dropdown-item">Log Out</button>
                        </form>
                    </li>
                </ul>
            </div>

        }
    </header>
    <!-- Search Bar Section (Below Header) -->
 
    @RenderBody()

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-links">
            <a href="#">Privacy Policy</a> | 
            <a href="#">Terms of Service</a> | 
            <a href="#">Support</a>
        </div>
        <div class="social-icons">
            <i class="bi bi-facebook"></i>
            <i class="bi bi-twitter"></i>
            <i class="bi bi-linkedin"></i>
        </div>
        <p>&copy; 2024 JobPortal. All rights reserved.</p>
    </footer>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
