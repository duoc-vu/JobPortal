<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JobPortal.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <header>
        <div class="container">
            <div class="logo">
                <img src="~/images/avt.jpg" alt="Logo" />
            </div>
            <nav>
                <ul>
                    <li><a href="@Url.Action("Index", "Jobs")">Việc làm</a></li>
                    <li><a href="@Url.Action("Index", "CV")">Hồ sơ & CV</a></li>
                    <li><a href="#">Công cụ</a></li>
                    <li><a href="#">Cẩm nang nghề nghiệp</a></li>
                    <li><a href="#">TopCV Pro</a></li>
                </ul>
            </nav>
            <div class="user-options">
                <a href="#" class="post-job">Đăng tuyển ngay</a>
                <div class="icons">
                    <span class="notification-icon">🔔</span>
                    <span class="message-icon">💬</span>
                    <img src="~/images/avatar.png" alt="User Avatar" class="user-avatar">
                </div>
            </div>
        </div>
    </header>

    <!-- Main content -->
    <main role="main" class="container">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <div class="footer-section">
                <img src="~/images/avt.jpg" alt="Logo">
                <p>Tiếp lợi thế - Nổi thành công</p>
                <p>Google for Startups Accelerator 2020</p>
            </div>
            <div class="footer-section">
                <h3>Khám phá</h3>
                <ul>
                    <li><a href="#">Ứng dụng di động</a></li>
                    <li><a href="#">Tính lương Gross - Net</a></li>
                    <li><a href="#">Lập kế hoạch tiết kiệm</a></li>
                </ul>
            </div>
            <div class="footer-section"> 
                <h3>Công ty</h3>
                <ul>
                    <li><a href="#">Giới thiệu</a></li>
                    <li><a href="#">Tuyển dụng</a></li>
                    <li><a href="#">Liên hệ</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Liên hệ</h3>
                <p>Hotline: (024) 6680 5588</p>
                <p>Email: hotro@topcv.vn</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
