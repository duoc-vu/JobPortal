@{
    ViewData["Title"] = "Home Page";
    var roleId = ViewContext.HttpContext.Session.GetInt32("IRoleId");
    var userId = ViewContext.HttpContext.Session.GetInt32("UserId");
}
@model List<TblJob>

    <!-- Upload Job Button -->

<div class="header-main">
    <div class="gradient-text">
        <h1>Career Opportunities</h1>
    </div>
    <!-- Search Section -->
    <div class="search-section ">
        <div class="header-search">
            <input type="text" placeholder="Search jobs, companies...">
            <button><i class="bi bi-search"></i></button>
        </div>
    </div>
    <div class="upload-job-section">
        @if (roleId == 2)
    {
            <a href="@Url.Action("AddJobs", "Employer")" class="btn upload-job-btn">Đăng tải Job</a>
            <a asp-controller="Employer" asp-action="JobsEmployer" asp-route-EmployerID="@ViewBag.iUserId" class="btn upload-job-btn">Xem Job đã đăng tải</a>
        }
    </div>
</div>
<!-- Job Listings -->
<div class="job-listing-container">
    
    @foreach (var job in Model)
    {
        <div class="job-card">
            <div class="job-info">
                <h2 class="job-title">@job.SJobName</h2>
                <p class="company-name">@job.IEmployerId</p>
                <p class="job-location"><i class="bi bi-geo-alt"></i> @job.FSalary</p>
                <p class="job-description">@job.SDetail</p>
            </div>
            <div class="job-action">
                <a asp-controller="Home" asp-action="JobDetail" asp-route-jobID="@job.IJobId">Xem Chi Tiết</a>
            </div>
        </div>
    }
</div>

