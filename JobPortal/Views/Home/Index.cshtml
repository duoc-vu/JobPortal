@{
    ViewData["Title"] = "Home Page";
    var roleId = ViewContext.HttpContext.Session.GetInt32("IRoleId");
    var userId = ViewContext.HttpContext.Session.GetInt32("IUserId");
}
@model List<TblJob>

    <!-- Upload Job Button -->

<div class="header-main">
    <div class="gradient-text">
        <h1>Career Opportunities</h1>
    </div>
    <!-- Search Section -->
    <div class="search-section ">
        <div class="header-search">
            <input type="text" placeholder="Search jobs, companies...">
            <button><i class="bi bi-search"></i></button>
        </div>
    </div>
    <div class="upload-job-section">
        @if (roleId == 2)
        {
            <a href="@Url.Action("AddJobs", "Employer")" class="btn upload-job-btn">Đăng tải Job</a>
            <a asp-controller="Employer" asp-action="JobsEmployer" asp-route-EmployerID="@ViewBag.iUserId" class="btn upload-job-btn">Xem Job đã đăng tải</a>
        } else if (roleId == 3)
        {
            <a asp-controller="Job" asp-action="JobCandidate" asp-route-candidateID="@userId" class="btn upload-job-btn">Xem Job ứng tuyển</a>
        }
    </div>
</div>
<!-- Job Listings -->
<div class="job-listing-container">
    
    @foreach (var job in Model)
    {
       <div class="job-card">
            <!-- Hình ảnh công ty -->
            <img class="job-image" src="@Url.Content("~/images/avt.jpg")" alt="Company Logo" />
            
            <div class="job-info">
                <!-- Tên công việc -->
                <h2 class="job-title">@job.SJobName</h2>
                
                <!-- Tên công ty -->
                <p class="company-name">Company Name: @job.IEmployer.SName</p>
                
                <!-- Địa điểm công việc -->
                <p class="job-description">
                    <i class="bi bi-geo-alt"></i> @job.SDetail
                </p>
                
                <!-- Mô tả công việc -->
                <p class="job-location">@job.SAddress</p>
            </div>
            
            <!-- Nút xem chi tiết -->
            <div class="job-action">
                <a class="btn-details" asp-controller="Home" asp-action="JobDetail" asp-route-jobID="@job.IJobId">Xem Chi Tiết</a>
            </div>
        </div>
    }
</div>

